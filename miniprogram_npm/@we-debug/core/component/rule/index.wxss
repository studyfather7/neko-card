.w-btn {
  width: 100rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  font-weight: 500;
  border-radius: 4px;
  color: #fff;
  background-color: #1AAD19;
}
.w-btn--default {
  background-color: #1AAD19;
  color: #fff;
}
.w-btn--brightgreen {
  background-color: #4DC820;
  color: #fff;
}
.w-btn--orange {
  background-color: #FFA500;
  color: #fff;
}
.w-btn--yellow {
  background-color: #D8B024;
  color: #fff;
}
.w-btn--blueviolet {
  background-color: #8833D7;
  color: #fff;
}
.w-btn--pink {
  background-color: #F26BAE;
  color: #fff;
}
.w-btn--red {
  background-color: #e05d44;
  color: #fff;
}
.w-btn--blue {
  background-color: #007EC6;
  color: #fff;
}
.w-btn--disabled {
  opacity: 0.5;
}
.w-switch {
  margin: 15rpx -8rpx 0 0;
}
.cell-body-major__meta {
  display: inline-block;
  padding: 0 8rpx;
  margin-left: 16rpx;
  min-width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  color: #fff;
  background-color: #e05d44;
  border-radius: 32rpx;
}
.cell-body-minor {
  color: #9d9d9d;
  font-size: 12px;
  margin-top: 6rpx;
}
